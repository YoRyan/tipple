{
    "manifest_version": 3,
    "name": "Container Tipple",
    "version": "0.1",
    "description": "Cleans cookies and local storage from Firefox containers.",
    "browser_specific_settings": {
        "gecko": {
            "id": "tipple@youngryan.com"
        }
    },
    "permissions": ["menus", "storage", "browsingData"],

    "background": {
        "scripts": ["background/background.js"]
    },
    "action": {
        "default_icon": {
            "16": "icons/placeholder-16.png",
            "32": "icons/placeholder-32.png"
        }
    },
    "commands": {
        "clear-data": {
            "suggested_key": {
                "default": "Alt+Shift+Delete",
                "mac": "Command+MacCtrl+Delete",
                "ios": "Command+MacCtrl+Delete",
                "chromeos": "Alt+Shift+0"
            },
            "description": "Clear cookies and storage"
        }
    }
}
